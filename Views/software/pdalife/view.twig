transition: all 0.3s cubic-bezier(0.42, 0, 1, 1) 0s;
margin-righn: 50px;
}
        </style>
    <div id="path">
    <div class="cnt-bar">
        <a class="home-page" href="/" title="Перейти на главную" rel="nofollow"><i class="fa fa-home"></i></a>
        > <a href="/smartphone/{{ file.platform }}/page1/" rel="nofollow">{{ file.platform|upper }}</a>
        > <a href="/smartphone/{{ file.platform }}/{{ file.type }}/page1/" rel="nofollow">{{ file.rutype|title }}</a>
        > <a href="/smartphone/{{ file.platform }}/{{ file.genre }}/page1/" rel="nofollow">{{ file.rugenre }}</a>
        <div class="dd_menu_2">

<!--
<a class="knopka-nastroyki" href="{{ file.link_view }}update" rel="nofollow" title="Обновить"><i class="fa fa-sliders"></i></a>
-->
<a href="javascript:history.back();" id="add_to_favorite"><i class="fa fa-sign-in"></i> Назад</a>



</div>
    </div>
</div>
<div id="middle-entry" class="overflow-hidden" itemscope itemtype="http://schema.org/ApplyAction">
<!-- <middle> -->
    <div class="entry-block">
        <div class="content-entry">
            <article class="entry e-page">
                <div class="e-mes" style="margin-left: 0;">
                    <h1 class="title1"><span itemprop="name">{{ file.runame|title }} </span></h1>
                    <br />
                    <div id="description3">
                        <div id="description2" style="visibility: visible; opacity: 1;">
                            <a href="{{ file.screens.0 }}" class="ulightbox no-bottom-border" rel="nofollow">
                                <span class="knopki-color"><i class="fa fa-search-plus s-20"></i> Увеличить изображение</span>
                            </a>
                            {% if file.video %}
                                <a href="#videoyou" class="ulightbox no-bottom-border">
                                    <span class="knopki-color"><i class="fa fa-search-plus s-20"></i> Посмотреть видео обзор</span>
                                </a>
                            {% endif %}
                        </div>
                                <div id="description4"></div>
                                <div id="description5"></div>
                    </div>
                </div>
                <div class="targetarea diffheight good-new-play">
                    <a id="multizoom1" href="{{ file.screen }}" class="ulightbox no-bottom-border" rel="nofollow"><img class="good-new-play2 rounded" id="multizoom2" alt="{{ file.runame }}" title="{{ file.runame }}" src="{{ file.screen }}" style="visibility: visible; opacity: 1; width: 708px; height: 398px;"></a>
                </div>

                <div>



                    <div class="jcarousel-container jcarousel-container-horizontal1 multizoom2 thumbs" style="position: relative; display: block;">
                        <div class="jcarousel-clip jcarousel-clip-horizontal" style="position: relative;">
                            <ul id="item-photos" class="jcarousel-list jcarousel-list-horizontal" style="overflow: hidden; position: relative; top: 0px; margin: 0px; padding: 0px; left: 0px; width: 765px;">
                                <li class="jcarousel-item jcarousel-item-horizontal jcarousel-item-9 jcarousel-item-9-horizontal" style="float: left; list-style: none;">
                                        <a href="#" onclick="return false"><img class="screen" src="{{ file.screen }}" alt="{{ file.runame }} №{{ key }}"></a>
                                </li>
                                {% for key, screen in file.screens %}
                                    <li class="jcarousel-item jcarousel-item-horizontal jcarousel-item-{{ key }} jcarousel-item-{{ key }}-horizontal" style="float: left; list-style: none;">
                                        <a href="#" onclick="return false"><img class="screen" src="{{ screen }}" alt="{{ file.runame }} №{{ key }}"></a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>





                </div>
<script type="text/javascript">
    /*$('.screen').mouseleave(function(){
        $("#multizoom2").attr("src", "{{ file.screen }}");
    });*/
    $('.screen').click(function(event){
        var src = event.target.getAttribute('src');
        $("#multizoom2").attr("src", src);
        $("#multizoom1").attr("href", src);
    });
</script>

                {{ toOutput(file.description)|raw }}
                <noindex>
                    <div style="text-align:center;">
                        <span class="ubar_info">Место для рекламы</span>
                    </div>
