                <div class="meta-post"><i class="fa fa-windows"></i> OC <span>{{ file.version }}</span></div>
            </div>
        </div>

        <div class="block">
            <div class="block-cnt">
                <div class="aside-label"><i class="fa fa-download"></i> Скачать файл</div>
                    <div id="files">
                        {% for link in file.links %}
                            <a itemprop="url" class="download ld_share" href="{{ link.href }}"><i class="fa fa-arrow-circle-o-down l"></i> {{ link.title|raw }}</a>
                        {% endfor %}
                    </div>
            </div>
        </div>
        <div class="block-cnt">
            <div class="aside-label pbt ptt"><i class="fa fa-share-alt"></i> Поделиться</div>
