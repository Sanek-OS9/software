{% extends 'document.twig' %}

{% block title %}{{ file.runame|title }} скачать бесплатно{% endblock %}

{% block meta %}
    {{ parent('meta') }}
    <meta property="og:title" content="{{ file.runame }}" />
    <meta property="og:image" content="http://{{ server_name }}{{ file.screen }}" />
    <meta property="og:url" content="http://{{ server_name }}{{ file.link_view }}">

    <meta name="twitter:card" content="summary"/>  <!-- Тип окна -->
    <meta name="twitter:site" content="Скачай-ка.рф"/>
    <meta name="twitter:title" content="{{ file.runame }}">
    <meta name="twitter:image:src" content="http://{{ server_name }}{{ file.screen }}"/>
    <meta name="twitter:domain" content="{{ file.link_view }}"/>

    <link rel="canonical" href="http://{{ server_name }}{{ file.link_view }}" />
    <meta name="description" content=""/>
{% endblock %}

{% block style %}
    {{ parent('style') }}
    <link type="text/css" rel="StyleSheet" href="/Static/css/coms-style.css" />
{% endblock %}

{% block content %}
    <style>
        .knopka-nastroyki {
float: right;
width: 65px;
