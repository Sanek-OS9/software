                <div class="a2a_kit">
                    <!-- uSocial -->
                    <script async src="https://usocial.pro/usocial/usocial.js" data-script="usocial" charset="utf-8"></script>
                    <div id="uSocial" class="text-center" data-pid="8089cef956a9783f85f54ef0c36d4371" data-type="share" data-options="round-rect,style1,absolute,horizontal,size24,eachCounter1,counter0" data-social="vk,gPlus,twi"></div>
                    <!-- /uSocial -->
                </div>
                <br />
            </div>

            <section class="links">
                <input id="link_1" type="radio" name="link" checked="checked">
                <input id="link_2" type="radio" name="link">
                <input id="link_3" type="radio" name="link">
                <label for="link_1" id="link_l1"><i class="fa fa-circle"></i><br> Ссылка</label>
                <label for="link_2" id="link_l2"><i class="fa fa-circle"></i><br> BB и HTML</label>
                <label for="link_3" id="link_l3"><i class="fa fa-circle"></i><br> Превью</label>
                <div style="clear:both"></div>
                <div class="links_cont">
                    <div id="link_c1">
                        <input type="text" readonly="" value="http://скачай-ка.рф{{ file.link_view }}" onclick="select(this);" class="new-width" style="width: 165px;">
                    </div>
                    <div id="link_c2">
                        <h6>BB-код</h6>
                        <input type="text" readonly="" value="[url=http://скачай-ка.рф{{ file.link_view }}]{{ file.runame }}[/url]" onclick="select(this);" class="new-width" style="width: 165px;">
                        <h6>HTML-код</h6>
                        <input type="text" readonly="" value="<a href='http://скачай-ка.рф{{ file.link_view }}'>{{ file.runame }}</a>" onclick="select(this);" class="new-width" style="width: 165px;">
                    </div>
                    <div id="link_c3">
                        <img src="{{ file.screen }}" alt="{{ file.runame }}" width="205px" />
                        <input type="text" readonly="" value="<a href='http://скачай-ка.рф{{ file.link_view }}'><img src='http://скачай-ка.рф{{ file.screen }}' width='200px' alt='{{ file.runame }}' target='_blank'/></a>" onclick="select(this);" class="new-width" style="width: 165px;">
                    </div>
                </div>
            </section>
        </div>
    </aside>
</div>
