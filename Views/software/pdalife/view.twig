            </div>
                <div id="videoyou">{{ toOutput(file.video)|raw }}</div>
                <hr>
            </article>
        </div>
    </div>
    <aside>
        <div class="block">
            <h3 class="title1 block-title"><span><i class="fa fa-info-circle"></i> Инфо</span></h3>
            <div class="block-cnt">
<div class="">
<div class="meta l">
<div class="rating-num"><b>{{ file.rating }}</b><span>/5</span></div>
</div>
<div class="rating-form r">
<div class="rating-stars r">
<ul id="uStarRating1209" class="uStarRating1209 u-star-rating-24" title="Рейтинг: {{ file.rating }}/5">
<li class="u-current-rating uCurStarRating1209" id="uCurStarRating1209" style="width:{{ file.rating_percent }}%;"></li>
</ul>
</div>
</div>
</div>
                <div class="meta-post"><i class="fa fa-eye"></i> Просмотров<span>{{ file.views }}</span></div>
                <!--
                <div class="meta-post"><i class="fa fa-comments"></i> Комментариев<span>0</span></div>
                <div class="meta-post"><i class="fa fa-download"></i> Загрузок<span>0</span></div>
                <div class="meta-post"><i class="fa fa-anchor"></i> Размер файла<span>{{ file.size }}</span></div>
-->
